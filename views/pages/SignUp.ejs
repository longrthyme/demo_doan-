<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/Head'); %>
    <link rel="stylesheet" type="text/css" href="/CSS/HomePage.css" />
</head>

<body>

  <%- include('../partials/Notification', { notification: typeof notification !=='undefined' ? notification : false,
    type: typeof type !=='undefined' ? type : '' , message: typeof message !=='undefined' ? message : '' }); %>

    <main class="container">

      <form method="post" id="form-1">
        <h3>Register Page</h3>
        <div class="form-group">
          <label for="username">Username: </label>
          <input type="text" placeholder="Nhập họ tên" autocomplete="additional-name" name="username" id="username" />
          <span><i class="fa-solid fa-user form-icon"></i></span>
          <p id="nameError"></p>
        </div>

        <div class="form-group">
          <label for="email">Email: </label>
          <input type="email" placeholder="VD: email@domain.com" autocomplete="email" name="email"
            value="<%= typeof email !== 'undefined' ? email : '' %>" id="email" />
          <span><i class="fa-solid fa-user form-icon"></i></span>
          <p id="emailError"></p>

        </div>

        <div class="form-group">
          <label for="password">Password: </label>
          <input type="password" placeholder="Nhập mật khẩu " autocomplete="new-password" name="password"
            id="password" />
          <span><i class="fa-solid fa-lock form-icon"></i></span>
          <p id="passwordError"></p>
        </div>

        <div class="form-group">
          <label for="re-password">Password again: </label>
          <input type="password" placeholder="Nhập lại mật khẩu " name="password_confirmation" id="confirmPassword"
            autocomplete="new-password" />
          <span><i class="fa-solid fa-lock form-icon"></i></span>
          <p id="confirmPasswordError"></p>
        </div>

        <div class="form-bottom">
          <button type="submit" id="submitBtn">Register</button>
          <p>Already had an account? <a href="/">Login</a></p>
        </div>
      </form>
    </main>

    <script src="/JS/validator.js"></script>
</body>

</html>